<script>
const API_URL = 'https://script.google.com/macros/s/AKfycbwDNjJpX7PmCt1Nhp62ZAjbbT6u4ru5ikOkcE_7u7DPbKKH7-jA0UbMEBJisG9TGo4s/exec';

function renderTrend(diffRank) {
    if (diffRank === '-' || diffRank === null || diffRank === undefined) {
        return '<div class="trend trend-same">━</div>';
    }

    const n = Number(diffRank);
    if (n > 0) return `<div class="trend trend-up">▲ +${n}</div>`;
    if (n < 0) return `<div class="trend trend-down">▼ ${n}</div>`;
    return '<div class="trend trend-same">━</div>';
}

async function loadData() {
    const leaderboard = document.getElementById('leaderboard');

    try {
        const res = await fetch(API_URL + '?t=' + Date.now());
        if (!res.ok) throw new Error(res.status);

        const data = await res.json();
        leaderboard.innerHTML = '';

        data.forEach(item => {
            const row = document.createElement('div');
            row.className = 'player-row';
            if (item.rank <= 3) row.classList.add('top-rank');

            row.innerHTML = `
                ${renderTrend(item.diff_rank)}
                <div class="rank-number">${item.rank}</div>
                <div class="player-name">${item.name}</div>
                <div class="player-score">${item.total}<span> TẤT</span></div>
            `;

            leaderboard.appendChild(row);
        });

    } catch (e) {
        leaderboard.innerHTML = '<div class="error">Lỗi tải dữ liệu</div>';
    }
}

loadData();
setInterval(loadData, 30000);
</script>
